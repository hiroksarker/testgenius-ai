# TestGenius AI Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================
# Your OpenAI API key (required for AI-powered test execution)
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI model to use for test execution
OPENAI_MODEL=gpt-4o

# AI behavior configuration
AI_TEMPERATURE=0.1
AI_MAX_TOKENS=2000
AI_RETRY_ATTEMPTS=3

# =============================================================================
# BROWSER CONFIGURATION
# =============================================================================
# Browser to use for testing (chrome, firefox, edge, safari)
DEFAULT_BROWSER=chrome

# Run browser in headless mode (true/false)
DEFAULT_HEADLESS=true

# Browser viewport size
DEFAULT_VIEWPORT=1920x1080

# Browser window size (if not headless)
BROWSER_WIDTH=1920
BROWSER_HEIGHT=1080

# =============================================================================
# TEST EXECUTION CONFIGURATION
# =============================================================================
# Default timeout for test operations (milliseconds)
DEFAULT_TIMEOUT=30000

# Default wait timeout for elements (milliseconds)
DEFAULT_WAIT_TIMEOUT=5000

# Number of parallel test executions
PARALLEL_EXECUTION=1

# Retry failed tests
RETRY_FAILED_TESTS=false

# Maximum number of retries for failed tests
MAX_RETRIES=2

# =============================================================================
# WEBDRIVERIO CONFIGURATION (Direct Browser Automation)
# =============================================================================
# WebdriverIO automation protocol (webdriver, devtools, appium)
WEBDRIVERIO_PROTOCOL=webdriver

# WebdriverIO log level (trace, debug, info, warn, error, silent)
WEBDRIVERIO_LOG_LEVEL=warn

# Connection retry count for WebdriverIO
WEBDRIVERIO_CONNECTION_RETRY_COUNT=3

# Connection retry timeout for WebdriverIO (milliseconds)
WEBDRIVERIO_CONNECTION_RETRY_TIMEOUT=120000

# =============================================================================
# REPORTING CONFIGURATION
# =============================================================================
# Directory for test reports
REPORT_OUTPUT_DIR=reports

# Number of days to retain reports
REPORT_RETENTION_DAYS=30

# Include screenshots in reports
INCLUDE_SCREENSHOTS=true

# Include console logs in reports
INCLUDE_CONSOLE_LOGS=true

# Generate summary reports
GENERATE_SUMMARY=true

# Screenshot quality (1-100)
SCREENSHOT_QUALITY=80

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================
# Directory for test session data
SESSION_DATA_DIR=test-results

# Number of sessions to retain
SESSION_RETENTION_COUNT=10

# Include screenshots in sessions
SESSION_INCLUDE_SCREENSHOTS=true

# Include page source in sessions
SESSION_INCLUDE_PAGE_SOURCE=false

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Enable debug logging (true/false)
ENABLE_DEBUG_LOGGING=false

# Include timestamps in logs
INCLUDE_TIMESTAMPS=true

# Include test ID in logs
INCLUDE_TEST_ID=true

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
# Default environment for tests
DEFAULT_ENVIRONMENT=staging

# Base URL for staging environment
STAGING_BASE_URL=https://staging.example.com

# Base URL for production environment
PRODUCTION_BASE_URL=https://example.com

# Base URL for development environment
DEV_BASE_URL=http://localhost:3000

# =============================================================================
# THE INTERNET TESTING SITE CONFIGURATION
# =============================================================================
# Base URL for The Internet testing site
THE_INTERNET_BASE_URL=https://the-internet.herokuapp.com

# Test credentials for The Internet site
THE_INTERNET_USERNAME=tomsmith
THE_INTERNET_PASSWORD=SuperSecretPassword!

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=false

# Performance threshold (milliseconds)
PERFORMANCE_THRESHOLD=5000

# Enable network throttling
ENABLE_NETWORK_THROTTLING=false

# Network throttling preset (Slow 3G, Fast 3G, etc.)
NETWORK_THROTTLING_PRESET=Slow 3G

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Enable security scanning
ENABLE_SECURITY_SCANNING=false

# Security scan timeout (milliseconds)
SECURITY_SCAN_TIMEOUT=30000

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
# Enable email notifications
ENABLE_EMAIL_NOTIFICATIONS=false

# Email recipient for test results
EMAIL_RECIPIENT=test@example.com

# Enable Slack notifications
ENABLE_SLACK_NOTIFICATIONS=false

# Slack webhook URL
SLACK_WEBHOOK_URL=your_slack_webhook_url_here 